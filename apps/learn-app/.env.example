# Database Configuration
# Get from Neon/PostgreSQL provider
DATABASE_URL=postgresql://user:password@host:5432/dbname

# Admin Configuration (change these!)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change-me-immediately
ADMIN_USER_ID=your-user-id-from-database

# Auth Server
AUTH_URL=http://localhost:3001

# OAuth Client
OAUTH_CLIENT_ID=agent-factory-public-client

# Progress API
PROGRESS_API_URL=http://localhost:8002

# Study Mode API
STUDY_MODE_API_URL=http://localhost:8000

# Token Metering API
TOKEN_METERING_API_URL=http://localhost:8001

# ChatKit (OpenAI)
# Get from https://platform.openai.com
CHATKIT_DOMAIN_KEY=your-domain-key-here

# SSO Admin Panel URL (production only)
# Set to your deployed SSO server URL (e.g., https://sso-imsanghaar.vercel.app)
SSO_URL=

# Environment
NODE_ENV=development
DEV_MODE=true
