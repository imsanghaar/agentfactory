# Database Configuration
# Get from Neon/PostgreSQL provider
DATABASE_URL=postgresql://user:password@host:5432/dbname

# Admin Configuration (change these!)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change-me-immediately
ADMIN_USER_ID=your-user-id-from-database

# Auth Server
# Production: https://auth-agentfactory.vercel.app
# Development: http://localhost:3001
AUTH_URL=https://auth-agentfactory.vercel.app

# OAuth Client
OAUTH_CLIENT_ID=agent-factory-public-client

# SSO Admin Panel URL (production)
# This is the URL for the Admin link in navbar
# Production: https://auth-agentfactory.vercel.app
# Development: http://localhost:3001
SSO_URL=https://auth-agentfactory.vercel.app

# Environment
NODE_ENV=development
DEV_MODE=true
