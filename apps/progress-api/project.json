{
  "name": "progress-api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/progress-api/src",
  "targets": {
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/progress-api",
        "command": "uv run pytest tests/ -v --tb=short"
      },
      "cache": true,
      "inputs": ["pythonInputs"]
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/progress-api",
        "command": "uv run ruff check src/ tests/"
      },
      "cache": true,
      "inputs": ["pythonInputs"]
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/progress-api",
        "command": "uv run ruff format src/ tests/"
      }
    },
    "format-check": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/progress-api",
        "command": "uv run ruff format --check src/ tests/"
      },
      "cache": true,
      "inputs": ["pythonInputs"]
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/progress-api",
        "command": "uv run mypy src/"
      },
      "cache": true,
      "inputs": ["pythonInputs"]
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/progress-api",
        "command": "uv run uvicorn progress_api.main:app --reload --port 8002"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/progress-api",
        "command": "docker build -t progress-api:latest ."
      },
      "cache": true,
      "inputs": ["pythonInputs", "{projectRoot}/Dockerfile"]
    }
  }
}
