{
  "name": "token-metering-api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/token-metering-api/src",
  "targets": {
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/token-metering-api",
        "command": "uv run pytest tests/ -v --tb=short"
      },
      "cache": true,
      "inputs": ["pythonInputs"]
    },
    "test-coverage": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/token-metering-api",
        "command": "uv run pytest tests/ --cov=src/token_metering_api --cov-report=term-missing --cov-report=html:coverage --cov-fail-under=80"
      },
      "cache": false,
      "inputs": ["pythonInputs"]
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/token-metering-api",
        "command": "uv run ruff check src/ tests/"
      },
      "cache": true,
      "inputs": ["pythonInputs"]
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/token-metering-api",
        "command": "uv run ruff format src/ tests/"
      }
    },
    "format-check": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/token-metering-api",
        "command": "uv run ruff format --check src/ tests/"
      },
      "cache": true,
      "inputs": ["pythonInputs"]
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/token-metering-api",
        "command": "uv run mypy src/"
      },
      "cache": true,
      "inputs": ["pythonInputs"]
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/token-metering-api",
        "command": "uv run uvicorn token_metering_api.main:app --reload --port 8001"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/token-metering-api",
        "command": "docker build -t token-metering-api:latest ."
      },
      "cache": true,
      "inputs": ["pythonInputs", "{projectRoot}/Dockerfile"]
    }
  }
}
